<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CF5858"
    tools:context=".AddEventInfo">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00292424"
                android:gravity="center"
                android:text="Select Info for Event"
                android:textColor="#B9ACACCF"
                android:textColorHint="#B9ACACCF"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#63DD1D1D"
                android:ems="10"
                android:hint="Event Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#B9ACACCF"
                android:textColorHint="#B9ACACCF"
                android:textSize="30dp" />

            <Spinner
                android:id="@+id/eventIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:entries="@array/icons"
                android:background="#57F31212"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#63DD1D1D"
                android:gravity="center"
                android:padding="10dp"
                android:text="Pick The Date"
                android:textColor="#B9ACACCF"
                android:textSize="30dp" />

            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#2F11A6"
                android:text="Pick The Time"
                android:textAllCaps="false"
                android:textColor="#B9ACACCF"
                android:textSize="30sp"
                app:backgroundTint="#66FFD541" />

            <EditText
                android:id="@+id/numberOfPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#00292424"
                android:ems="10"
                android:hint="Max Number of Participants"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#B9ACACCF"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#F10202"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Extra Info"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#B9ACACCF"
                android:textSize="30dp"
                app:backgroundTint="#63FF9C9C" />

            <Button
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#000000"
                android:text="DONE"
                android:textAllCaps="false"
                android:textColor="#B9ACACCF"
                android:textSize="30sp"
                app:backgroundTint="#66FFCF25" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>