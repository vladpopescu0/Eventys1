<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarkerDetails"
    android:background="@drawable/f0b9523dacbecc5bd4e2aae496a9c8c2">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/f0b9523dacbecc5bd4e2aae496a9c8c2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/baloo"
            android:isScrollContainer="false"
            android:shadowColor="#00FFFFFF"
            android:text="back"
            android:textColor="#B9ACACCF"
            android:textColorHint="#B9ACACCF"
            app:backgroundTint="#668299"
            app:icon="@drawable/abc_vector_test"
            app:iconTint="#B9ACACCF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.025" />

        <TextView
            android:id="@+id/title_marker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#668299"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:padding="10dp"
            android:text="DEFAULT"
            android:textColor="#B9ACACCF"
            android:textColorHint="#B9ACACCF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#668299"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:padding="10dp"
            android:text="DEFAULT"
            android:textColor="#B9ACACCF"
            android:textColorHint="#B9ACACCF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#668299"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:padding="10dp"
            android:text="DEFAULT"
            android:textColor="#B9ACACCF"
            android:textColorHint="#B9ACACCF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/participants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#668299"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:padding="10dp"
            android:text="DEFAULT"
            android:textColor="#B9ACACCF"
            android:textColorHint="#B9ACACCF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#668299"
            android:fontFamily="@font/baloo"
            android:maxLines="5"
            android:padding="10dp"
            android:text="DEFAULT"
            android:textColor="#B9ACACCF"
            android:textColorHint="#B9ACACCF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/extraText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="#668299"
            android:fontFamily="@font/baloo"
            android:text=""
            android:textColor="#B9ACACCF"
            android:textColorHint="#B9ACACCF"
            android:textSize="24sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="join"
            android:textColor="#B9ACACCF"
            android:textColorHint="#B9ACACCF"
            android:textSize="24sp"
            app:backgroundTint="#10F5FF"/>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>